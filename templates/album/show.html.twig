{% extends 'base.html.twig' %}

{% block title %}{{ album.Nom }}{% endblock %}

{% block body %}
    <h1>{{ album.Nom }}</h1>

    <p>
        <b>Description</b>
        {{ album.Description }}
    </p>



    <h2>Photos</h2>
    <ul>
        {% for photo in album.Objets %}
            <li>
                <a href="{{ path('app_album_photo_show', {'id': album.id, 'photo_id' : photo.id}) }}">{{ photo.id }}</a>
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('app_album_index') }}">Retour aux albums</a>

    <a href="{{ path('app_album_edit', {'id': album.id}) }}">Modifier</a>

    {{ include('album/_delete_form.html.twig') }}
{% endblock %}
