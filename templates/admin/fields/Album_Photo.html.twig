<ul>
    {% for Album in field.value %}
    {%- set url = ea_url()
        .setController('App\\Controller\\Admin\\AlbumCrudController')
        .setAction('detail')
        .setEntityId(Album.id)
    -%}
    <ul>
        <a href="{{ url }}">
            {{ Album }}
        </a>
    </ul>
    {% else %}
</ul>
<span class="badge badge-secondary">Aucun</span>
<ul>
    {% endfor %}
</ul>