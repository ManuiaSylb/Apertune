{% extends 'base.html.twig' %}

{% block title %}Galeries{% endblock %}

{% block body %}
    <h1>Liste des galeries</h1>

    <table class="table">
        <thead>
        <tr>
            <!-- <th>Id</th> -->
            <th>Nom</th>
            <th>Auteur</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for gallerie in galleries %}
            <tr>
                <!-- <td>{{ gallerie.id }}</td> -->
                <td>{{ gallerie.Nom }}</td>
                <td><a href="{{ path('membre_show', {'id': gallerie.Auteur.id}) }}">{{ gallerie.Auteur.Pseudo }}</a></td>
                <td>
                    <a href="{{ path('galleries_show', {'id': gallerie.id}) }}">Montrer la galerie</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune galerie trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_galleries_new') }}">Nouvelle galerie</a>

{% endblock %} {# body #}


