{% extends 'base.html.twig' %}

{% block title %}Profil de {{ membre.Pseudo }}{% endblock %}
{# ... #}
  {% block body %}
      <h1>{{ membre.Pseudo }}</h1>


      <table class="table">
          <thead>
          <tr>
              <th>Pseudo</th>
              <th>Pays</th>
              <th>Albums</th>
          </tr>
          </thead>
          <tbody>
              <tr>
                  <td>{{ membre.Pseudo }}</td>
                  <td>{{ membre.Pays }}</td>
                  <td>
                      {% for album in membre.Albums %}
                          <li>
                              <a href="{{ path('app_album_show', {'id': album.id}) }}">{{ album.Nom }}</a>
                          </li>

                      {%  endfor %}
                      {% if app.user %}
                      {% if app.user.Pseudo == membre.Pseudo or is_granted('ROLE_ADMIN') %}
                      <a href="{{ path('app_album_new', {'id': membre.id}) }}">Cr√©er un album</a>
                      {% endif %}
                      {%  endif %}
                  </td>
              </tr>
          </tbody>
      </table>

      <a href="{{ path('app_galleries')}}">Retour vers les galeries</a>

  {% endblock %} {# body #}
{# ... #}


